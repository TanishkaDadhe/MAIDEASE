<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Us | Maid Ease</title>
    <link rel="stylesheet" href="/styles/contactUs_Style.css">
    <style>
        .flash {
            position: fixed;
            top: 70px; /* Adjust if needed depending on your taskbar height */
            left: 50%;
            transform: translateX(-50%);
            padding: 12px 20px;
            border-radius: 5px;
            font-weight: bold;
            z-index: 9999;
            min-width: 300px;
            text-align: center;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.15);
        }
        .success {
          background-color: #d4edda;
          color: #155724;
          border: 1px solid #c3e6cb;
        }
        .error {
          background-color: #f8d7da;
          color: #721c24;
          border: 1px solid #f5c6cb;
        }
      </style>      
</head>
<body>

    <!-- <nav>
        <a href="/" class="logo">MAID<span>EASE</span></a>
        <a href="/contactUs" class="active">Contact Us</a>
    </nav> -->

    <div class="taskbar">
        <a href="/">Home</a>
        <a href="/contactUs">Contact Us</a>
    </div>

    <% if (successMessage.length > 0) { %>
        <div class="flash success"><%= successMessage[0] %></div>
    <% } %>
      
    <% if (errorMessage.length > 0) { %>
        <div class="flash error"><%= errorMessage[0] %></div>
    <% } %>
    
    <header class="contact-header">
        <h1>Get in Touch</h1>
        <p>We're here to help! Contact us with any questions.</p>
    </header>

    <section class="contact-container">
        <div class="contact-form">
            <h2>Send a Message</h2>
            <form action="/contactUs" method="POST">
                <label for="name">Full Name</label>
                <input type="text" id="name" name="name" required>

                <label for="email">Email Address</label>
                <input type="email" id="email" name="email" required>

                <label for="message">Message</label>
                <textarea id="message" name="message" rows="5" required></textarea>

                <button type="submit">Send Message</button>
            </form>
        </div>

        <div class="contact-info">
            <h2>Contact Details</h2>
            <p><strong>Email:</strong> support@maidease.com</p>
            <p><strong>Phone:</strong> +91 98765 43210</p>
            <p><strong>Address:</strong> A.P. Shah Institute Of Technology, Kasarvadavali, Thane, India</p>

            <!-- Embedded Google Map (AP Shah College, Kasarvadavali, Thane) -->
            <a href="https://www.google.com/maps/place/AP+Shah+Institute+of+Technology/@19.2684576,72.9716152,17z/" 
               target="_blank">
                <iframe class="map" 
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3768.352692906318!2d72.9716152!3d19.2684576!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3be7b9003f4977c9%3A0x42a5b8e3d12a1e3f!2sAP%20Shah%20Institute%20of%20Technology!5e0!3m2!1sen!2sin!4v1611784291234!5m2!1sen!2sin" 
                    width="100%" height="250" style="border:0;" allowfullscreen="" loading="lazy">
                </iframe>
            </a>

        </div>
    </section>

</body>
</html>


<script>
    setTimeout(() => {
      const flash = document.querySelector('.flash');
      if (flash) {
        flash.style.opacity = '0'; // Trigger fade out
  
        // Remove from DOM after animation completes
        setTimeout(() => flash.remove(), 1000); // match with CSS transition (1s)
      }
    }, 5000); // Wait 5 seconds before starting fade out
</script>